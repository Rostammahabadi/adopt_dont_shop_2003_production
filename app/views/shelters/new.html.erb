<form action="/shelters" method="post" class="new-shelter">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
    <p>Enter information for a new shelter:</p>
    <label>Name</label>
    <input type="text" name='shelter[name]'/><br/>
    <label>Address</label>
    <input type="text" name='shelter[address]'/><br/>
    <label>City</label>
    <input type="text" name='shelter[city]'/><br/>
    <label>State</label>
    <input type="text" name='shelter[state]'/><br/>
    <label>Zip</label>
    <input type="text" name='shelter[zip]'/><br/>
    <input type="submit" value="submit"/>
</form>