<h2>New Shelter</h2>

<div class="input-form">
    <%= form_tag "/shelters", method: :post do %>
        <div class="row form-entry">
            <%= label_tag :name, nil, class: "col-3 light-text" %>
            <%= text_field_tag :name, "#{params[:name]}" , class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :address, nil, class: "col-3 light-text" %>
            <%= text_field_tag :address, "#{params[:address]}" , class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :city, nil, class: "col-3 light-text" %>
            <%= text_field_tag :city, "#{params[:city]}" , class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :state, nil, class: "col-3 light-text" %>
            <%= text_field_tag :state, "#{params[:state]}" , class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :zip, nil, class: "col-3 light-text" %>
            <%= text_field_tag :zip, "#{params[:zip]}", class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= submit_tag "Create Shelter", class:"col-3" %>
        </div>
    <% end %>
</div>