<h2>Update Pet</h2>

<div class="input-form">
    <%= form_tag "/pets/#{@pet.id}", method: :patch do %>
        <div class="row form-entry">
            <%= label_tag :name, nil, class: "col-3 light-text" %>
            <%= text_field_tag :name, "#{@pet.name}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :image, nil, class: "col-3 light-text" %>
            <%= text_field_tag :image, "#{@pet.image}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :description, nil, class: "col-3 light-text" %>
            <%= text_field_tag :description, "#{@pet.description}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag "Approximate age", nil, class: "col-3 light-text" %>
            <%= text_field_tag :age, "#{@pet.age}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :sex, nil, class: "col-3 light-text" %>
            <%= text_field_tag :sex, "#{@pet.sex}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= submit_tag "Update Pet", class:"col-3" %>
        </div>
    <% end %>
</div>
