<h2>Create Pet</h2>

<%= form_tag "/shelters/#{@shelter_id}/pets", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
    <%= label_tag "Approximate age" %>
    <%= text_field_tag :age %>
    <%= label_tag :sex %>
    <%= text_field_tag :sex %>
    <%= submit_tag "Create Pet" %>
<% end %>