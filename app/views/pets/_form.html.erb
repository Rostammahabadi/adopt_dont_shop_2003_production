<div class="input-form">
    <%= form_tag path, method: method do %>
        <div class="row form-entry">
            <%= label_tag :name, nil, class: "col-3 light-text" %>
            <%= text_field_tag :name, "#{default[:name]}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :image, nil, class: "col-3 light-text" %>
            <%= text_field_tag :image, "#{default[:image]}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :description, nil, class: "col-3 light-text" %>
            <%= text_field_tag :description, "#{default[:description]}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag "Approximate age", nil, class: "col-3 light-text" %>
            <%= text_field_tag :age, "#{default[:age]}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= label_tag :sex, nil, class: "col-3 light-text" %>
            <%= text_field_tag :sex, "#{default[:sex]}", class: "col-8"%>
        </div>
        <div class="row form-entry">
            <%= submit_tag submit_text, class:"col-3" %>
        </div>
    <% end %>
</div>
