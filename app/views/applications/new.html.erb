<h2>New Application</h2>


<div class="input-form">
    <%= form_tag "/applications", method: :post do %>
        <div class="row form-entry">
          <%= label_tag "Select Pet", nil, class: "col-3 light-text" %>
          <%= select_tag "pet", options_for_select(@selected_favorites), multiple: :true, style:"margin-left:31px;margin-top:10px", class:""%>
        </div>
        <div class="row form-entry">
            <%= label_tag :name, nil, class: "col-3 light-text" %>
            <%= text_field_tag :name, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :address, nil, class: "col-3 light-text" %>
            <%= text_field_tag :address, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :city, nil, class: "col-3 light-text" %>
            <%= text_field_tag :city, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :state, nil, class: "col-3 light-text" %>
            <%= text_field_tag :state, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag :zip, nil, class: "col-3 light-text" %>
            <%= text_field_tag :zip, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag "phone number", nil, class: "col-3 light-text" %>
            <%= text_field_tag :phone_number, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= label_tag "Description of why I'd make a good home for this/these pet(s)", nil, class: "col-3 light-text" %>
            <%= text_area_tag :description, nil, class: "col-8" %>
        </div>
        <div class="row form-entry">
            <%= submit_tag "Submit", class:"col-3" %>
        </div>
    <% end %>
</div>
